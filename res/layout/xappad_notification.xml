<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xappad_mainview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/xappad_bannerview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/xappad_bannerviewimg"
            android:layout_width="match_parent"
            android:layout_height="60px" />

        <TextView
            android:id="@+id/xappad_bannerviewtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8dip" />
    </LinearLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/xappad_customtextview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal|left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/xappad_customtextviewtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textSize="22dip" />

        <TextView
            android:id="@+id/xappad_customtextviewcta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="46dp"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/xappad_customtextviewdescription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/xappad_customtextviewtitle"
            android:layout_marginLeft="2dp"
            android:textSize="14dip" />

        <TextView
            android:id="@+id/xappad_customtextviewsmalltext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/xappad_customtextviewdescription"
            android:layout_marginLeft="2dp"
            android:textSize="8dip" />
    </RelativeLayout>

</RelativeLayout>