<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/loadingBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ProgressBar
            android:id="@+id/progressBar_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp" />

        <TextView
            android:id="@+id/msgbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical|right"
            android:text="@string/loadingObjectMsg"
            android:textColor="@color/white" >
        </TextView>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@drawable/seprator" >
    </View>

    <TextView
        android:id="@+id/costView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal"
        android:textColor="@color/white" >
    </TextView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@drawable/seprator" >
    </View>

    <LinearLayout
        android:id="@+id/settingBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/reducedCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight=".5"
            android:checked="true"
            android:text="@string/cost" />

        <CheckBox
            android:id="@+id/simType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight=".5"
            android:text="@string/simType" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@drawable/seprator" >
    </View>

    <gui.PinglishTextBox
        android:id="@+id/PersianText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:ems="10"
        android:gravity="right"
        android:hint="معادل فارسی"
        android:lines="3"
        android:singleLine="false"
        android:textColor="@color/blueTextColor" >
    </gui.PinglishTextBox>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@drawable/seprator" >
    </View>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/leftArrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight=".1"
            android:src="@drawable/left" >
        </ImageView>

        <com.devsmart.android.ui.HorizontalListView
            android:id="@+id/listOfSuggestions"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight=".8" >
        </com.devsmart.android.ui.HorizontalListView>

        <ImageView
            android:id="@+id/rightArrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight=".1"
            android:src="@drawable/right" >
        </ImageView>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/seprator" >
    </View>

    <gui.PinglishTextBox
        android:id="@+id/PinglishText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Finglish"
        android:lines="3"
        android:singleLine="false" >

        <requestFocus />
    </gui.PinglishTextBox>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@drawable/seprator" >
    </View>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/sendText"
            style="@style/ButtonText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/blue_button"
            android:text="Send" />

        <Button
            android:id="@+id/copyText"
            style="@style/ButtonText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/blue_button"
            android:text="Copy" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@drawable/seprator" >
    </View>

</LinearLayout>